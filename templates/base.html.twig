<!DOCTYPE html>
<html lang="sv">

    {% if block('title') is defined and block('style') is defined %}
        {% include 'incl/header.twig' with {'title': block('title'), 'style': block('style')} %}
    {% elseif block('title') is defined %}
        {% include 'incl/header.twig' with {'title': block('title'), 'style': 'style'} %}
    {% elseif block('style') is defined %}
        {% include 'incl/header.twig' with {'title': 'New page', 'style': block('style')} %}
    {% else %}
        {% include 'incl/header.twig' with {'title': 'New page', 'style': 'style'} %}
    {% endif %}

    <body>
        {% if block('nav') is defined %}
            {% include 'incl/nav/' ~ block('nav') ~ '.twig' %}
        {% else %}
            {% include 'incl/nav/report.twig' %}
        {% endif %}

            {% if block('header') is defined %}
                <header>
                    <h1 class="centered empty">
                        {% block header %}{% endblock %}
                    </h1>
                </header>
            {% endif %}

        <div class="maincontainer">
            <div class="container">
                {% block content %}{% endblock %}
            </div>
        </div>
        {% include 'incl/footer.twig' %}
    </body>
</html>

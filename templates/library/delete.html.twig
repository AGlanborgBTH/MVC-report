{% extends "base.html.twig" %}

{% block title %}Delete{% endblock %}

{% block header %}Library | Delete{% endblock %}

{% block nav %}library{% endblock %}

{% block content %}

{% set flash = app.flashes %}

<h2>
    Divinity: Original Sin 2
</h2>
<h3>
    Delete Character
</h3>

<div class="row space-between">
    <form method="post">
        <label for="name">
            Name
        </label>
        <input type="text" name="name" id="name" value="{{character.name}}" required disabled/>
        <label for="race">
            Race
        </label>
        <input type="text" name="race" id="race" value="{{character.race}}" required disabled/>
        <label for="gender">
            Gender
        </label>
        <input type="text" name="gender" id="gender" value="{{character.gender}}" required disabled/>

        <label for="img">
            Image
        </label>
        <input type="text" name="img" id="img" value="{{character.img}}" disabled/>
        <input type="submit" name="submit" value="Delete character"/>
    </form>
</div>

{% endblock %}
<div class="homecenter">
	<div class="handcontainer">
		<div class="hand">
			{% if game.phase > 3 %}
				<div class="cardbox">
					{% include "proj/game/card.html.twig" with {
						"color": game.dealer.hand[0].getColor(),
						"pattern": game.dealer.hand[0].getPattern(),
						"value": game.dealer.hand[0].getValue()
					} %}
				</div>
				<div class="cardbox">
					{% include "proj/game/card.html.twig" with {
						"color": game.dealer.hand[1].getColor(),
						"pattern": game.dealer.hand[1].getPattern(),
						"value": game.dealer.hand[1].getValue()
					} %}
				</div>
			{% else %}
				<div class="cardbox">
					<div class="cardback"></div>
				</div>
				<div class="cardbox">
					<div class="cardback"></div>
				</div>
			{%  endif %}
		</div>
		<div class="hand">
			<div class="cardbox">
				{% include "proj/game/card.html.twig" with {
					"color": game.player.hand[0].getColor(),
					"pattern": game.player.hand[0].getPattern(),
					"value": game.player.hand[0].getValue()
				} %}
			</div>
			<div class="cardbox">
				{% include "proj/game/card.html.twig" with {
					"color": game.player.hand[1].getColor(),
					"pattern": game.player.hand[1].getPattern(),
					"value": game.player.hand[1].getValue()
				} %}
			</div>
		</div>
	</div>
</div>

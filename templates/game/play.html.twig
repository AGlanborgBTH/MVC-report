{% extends "base.html.twig" %}

{% block title %}Game | Blackjack {% endblock %}

{% block header %}Play Blackjack{% endblock %}

{% block nav %}game{% endblock %}

{% block content %}

{% set flash = app.flashes %}
{% set colour = "red" %}
{% set count = 1 %}
{% set playing = 0 %}

<form method="post">
    {% if flash["game"] is defined %}
        {% set game = flash["game"][0] %}
        <div class="centered">
            <h2>
                Dealers Hand
            </h2>
            <p>
                {% if not game.dealer.get_state() %}
                    {{ game.dealer.hand[0].get_value() ~ game.dealer.hand[0].get_pattern() }}
                    **
                {% else %}
                    {% for card in game.dealer.hand %}
                        {{ card.get_value() ~ card.get_pattern() }}
                    {% endfor %}
                {% endif %}
            </p>
            <h3 class="empty">
                {% if game.dealer.get_state() %}
                    Points
                {% endif %}
            </h3>
            <p class="empty">
                {% if game.dealer.get_state() %}
                    {{ game.dealer.get_points() }}
                {% endif %}
            </p>
        </div>
        <div class="center">
            {% for player in flash["game"][0].players %}
                <div class="player {{colour}} centered">
                    <h2>
                        Player {{ count }}
                    </h2>
                    <h3>
                        Cards
                    </h3>
                    <p>
                        {% for card in player.hand %}
                            {{ card.get_value() ~ card.get_pattern() }}
                        {% endfor %}
                    </p>
                    <h3>
                        Points
                    </h3>
                    <p>
                        {{ player.get_points() }}
                    </p>
                    {% if player.get_state() == 0 and playing == 0 %}
                        {% set playing = 1 %}
                        <input type="submit" name="hit" value="Hit">
                        <input type="submit" name="stand" value="Stand">
                    {% elseif player.get_state() == 2 %}
                        <h3>
                            You Lost
                        </h3>
                    {% elseif player.get_state() == 3 %}
                        <h3>
                            You Drew
                        </h3>
                    {% elseif player.get_state() == 4 %}
                        <h3>
                            You Won
                        </h3>
                    {% endif %}
                </div>
                {% set count = count + 1 %}
                {% if colour == "red" %}
                    {% set colour = "blue" %}
                {% elseif colour == "blue" %}
                    {% set colour = "green" %}
                {% elseif colour == "green" %}
                    {% set colour = "yellow" %}
                {% else %}
                    {% set colour = "red" %}
                {% endif %}
            {% endfor %}
        </div>
        {% if playing == 0 and game.dealer.get_state() != 2 %}
            <div class="centered">
                <input type="submit" name="continue" value="Continue">
            </div>
        {% elseif playing == 0 and game.dealer.get_state() == 2 %}
            <div class="centered">
                <input type="submit" name="clear" value="Finnish">
            </div>
        {% endif %}
        <input type="submit" name="clear" value="Scrap game">
    {% else %}
        {% include './game/start.html.twig' %}
    {% endif %}
</form>

{% endblock %}